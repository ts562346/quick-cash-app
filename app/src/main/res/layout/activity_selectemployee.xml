<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/scrollView2">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="127dp"
                android:layout_height="126dp"
                android:layout_marginLeft="250dp"
                android:baselineAligned="false"
                android:gravity="right"
                app:srcCompat="@drawable/quick_cash_icon" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title"
                tools:layout_editor_absoluteY="130dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#000000"
                android:text="Select employee"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title2"
                tools:layout_editor_absoluteY="130dp"
                android:textSize="16sp"
                android:textColor="#788190"
                android:text="Accept or reject employee"
                android:layout_marginBottom="60dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:background="@drawable/rectangle_background">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="229dp"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="Name" />


                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="163dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@id/textview1"
                    android:padding="2dp"
                    android:text="Accept/Decline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:background="@drawable/rectangle_underlined">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="229dp"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="Mirazul Islam" />

                <LinearLayout
                    android:layout_width="163dp"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@id/textview3">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="\u2713"/>
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="\u2717"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:background="@drawable/rectangle_underlined">

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="229dp"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="Miftahul Kashfy" />

                <LinearLayout
                    android:layout_width="163dp"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@id/textview4">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="\u2713"/>
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="\u2717"/>
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/loginButton"
                android:text="Submit"
                android:layout_margin="5dp"
                android:radius="30dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>